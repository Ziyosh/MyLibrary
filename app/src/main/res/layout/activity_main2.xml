<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2"
    android:background="@color/purple_200">

    <ImageView
        android:id="@+id/cakeImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/cake" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pebble Beach"
        android:textSize="25dp"
        android:layout_toRightOf="@id/cakeImg"
        android:id="@+id/txtBeach"
        />

    <TextView
        android:id="@+id/txtCalifornia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBeach"
        android:layout_toRightOf="@id/cakeImg"
        android:text="California"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCalifornia"
        android:layout_toRightOf="@id/cakeImg"
        android:text="10 miles away"
        android:textSize="20dp" />


</RelativeLayout>